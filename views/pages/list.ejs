<h1 class="display-4 text-center mb-2">Articles</h1>

<table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">title</th>
        <th scope="col">body</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
     <% articles.forEach(function(article){ %>
        <tr>
            <th scope="row"><%= article.id %></th>
            <td><%= article.title %></td>
            <td><%= article.body %></td>
            <td>
               <a href="/articles/edit/<%= article.id %>" class="btn btn-primary btn-sm">Edit</a>
               <form class="d-inline" action="/articles/delete/<%= JSON.stringify({id : article.id, x: 'test'}) %>" method="post">
                <button type="sumbit" class="btn  btn-danger btn-sm">Delete</button>
               </form>
            </td>
          </tr>
     <% }) %>
      
    </tbody>
  </table>